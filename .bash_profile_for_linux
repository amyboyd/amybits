# Go to directories.
alias towork="cd ~/Work"

# Git.
alias gs="git status"
alias gsh="git show"
alias gc="git commit"
alias gch="git checkout"
alias gl="git log"
alias gd="git diff"
alias gdc="git diff --cached"
alias gb="git branch"

# Misc. other.
alias ll="ls -opgh"
alias subl="sublime"

# Change brightness (0.1 to 1.0).
alias brightness="xrandr --output LVDS1 --brightness "

# Using Mac OS X's copy/paste names.
alias pbcopy="xclip -selection c"
alias pbpaste="xclip -selection c -o"
